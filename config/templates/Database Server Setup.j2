EOF

# Show database status
echo "ğŸ“‹ Database service status:"
sudo systemctl status postgresql --no-pager -l

# Show database info
echo "ğŸ—„ï¸ Database connection test:"
sudo -u postgres psql -d $DB_NAME -c "SELECT version();"
sudo -u postgres psql -d $DB_NAME -c "SELECT COUNT(*) as total_devices FROM lab_devices;"

echo "âœ… PostgreSQL database setup complete for {{ hostname }}!"
echo "ğŸ—„ï¸ Database: $DB_NAME"
echo "ğŸ‘¤ User: $DB_USER"
echo "ğŸ”Œ Port: $DB_PORT"
echo "ğŸ“‹ Connection script: /opt/connect_db.sh"
echo "ğŸŒ Info page: http://{{ server_ip }}/db-info.html"
